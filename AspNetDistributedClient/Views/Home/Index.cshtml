@{
    ViewBag.Title = "Home Page";
}

    <div class="jumbotron">
        @using (Html.BeginForm("About", "Home", FormMethod.Post))
        {
            <h1>Enter first straight</h1>
            <p>Enter first point</p>
            <input type="number" step="0.1" name="firstX1" placeholder="X" />
            <input type="number" step="0.1" name="firstY1" placeholder="Y" />
            <p>Enter second point</p>
            <input type="number" step="0.1" name="firstX2" placeholder="X" />
            <input type="number" step="0.1" name="firstY2" placeholder="Y" />
            <p class="lead">Enter second straight</p>
            <p>Enter first point</p>
            <input type="number" step="0.1" name="secondX1" placeholder="X" />
            <input type="number" step="0.1" name="secondY1" placeholder="Y" />
            <p>Enter second point</p>
            <input type="number" step="0.1" name="secondX2" placeholder="X" />
            <input type="number" step="0.1" name="secondY2" placeholder="Y" />
            <input type="submit" value="Отправить" class="btn btn-primary btn-lg" />
        }
    </div>